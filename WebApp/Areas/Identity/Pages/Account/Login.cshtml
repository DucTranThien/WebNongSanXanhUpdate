@page
@model LoginModel

@{
    ViewData["Title"] = "Trang đăng nhập";
}
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                    <div class="card-body">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.UserNameOrEmail" class="form-control" autocomplete="username" placeholder="Nhập tên đăng nhập hoặc email" />
                                <label asp-for="Input.UserNameOrEmail" class="form-label">Nhập tên đăng nhập hoặc email</label>
                                <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" placeholder="Nhập mật khẩu" />
                                <label asp-for="Input.Password" class="form-label">Nhập mật khẩu</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-check mb-3">
                                @* <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />  *@
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    Ghi nhớ đăng nhập
                                </label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <div></div>
                                <button id="login-submit" type="submit" class="btn btn-primary" style="min-width: 150px">
                                    <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập
                                </button>
                                <div></div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><i class="fas fa-user-plus me-1"></i>Bạn chưa có tài khoản? Đăng ký ngay!</a>
                            <a asp-area="" asp-action="ForgotPassword" asp-controller="User"><i class="fas fa-key me-1"></i>Bạn quên mật khẩu?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
