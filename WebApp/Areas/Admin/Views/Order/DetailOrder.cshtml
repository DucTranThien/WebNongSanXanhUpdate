@model IEnumerable<WebApp.Models.OrderDetail>
@{
    string orderId = ViewBag.OrderId;
}
<main>
    <div class="container-fluid px-4">
        <div class="card mb-4 mt-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Thông tin đơn hàng có ID: <b>@orderId</b>
            </div>

            <div class="card-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Mô tả</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.IdspNavigation.Idsp</td>
                                <td>
                                    @order.IdspNavigation.SpName
                                </td>
                                <td>
                                    @if (order.IdspNavigation.HinhAnhSp is not null)
                                    {
                                        <img src="@order.IdspNavigation.HinhAnhSp" alt="Hình ảnh sp" class="img-thumbnail mt-2" style="max-width: 100px" />
                                    }
                                </td>
                                <td>@order.IdspNavigation.MoTa</td>
                                <td>@order.Price</td>
                                <td>
                                    @order.Quantity
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <a asp-action="Index" class="m-1 btn btn-success mt-1">
            <i class="fa-solid fa-rotate-left"></i> Trở về danh sách
        </a>
    </div>
</main>

@section Scripts {
}