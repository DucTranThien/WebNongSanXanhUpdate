@model IEnumerable<WebApp.Models.UserInfo>
@section Styles {
    <link href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css" rel="stylesheet" />
}
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Quản lý người dùng</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Quản lý người dùng</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
                Quản lý người dùng là nơi xem xét các thông tin liên quan đến người dùng.
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Tất cả người dùng
            </div>

            <div class="card-body">
                <table id="dataQuanlynguoidung" class="table table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Username</th>
                            <th>Tên khách hàng</th>
                            <th>Ảnh đại diện</th>
                            <th>Địa chỉ</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Quyền</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.TenKhachHang</td>
                                <td>
                                    @if (user.Avatar != null)
                                    {
                                        <img id="profilePicture" alt="Ảnh đại diện" class="img-thumbnail" style="max-height: 100px ;object-fit: cover" src="data:image/*;base64,@(Convert.ToBase64String(user.Avatar))" />
                                    }
                                    else
                                    {
                                        <img id="profilePicture" alt="Ảnh đại diện" class="img-thumbnail" style="max-height: 100px ;object-fit: cover" src="~/images/0d64989794b1a4c9d89bff571d3d5842.jpg" />
                                    }
                                </td>
                                <td>@user.DiaChi</td>
                                <td>@user.Email</td>
                                <td>@user.Phone</td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge bg-danger fs-6">@user.Role</span>
                                    }
                                    else if (user.Role == "Manager")
                                    {
                                        <span class="badge bg-warning fs-6">@user.Role</span>
                                    }
                                    else if (user.Role == "Poster")
                                    {
                                        <span class="badge bg-info fs-6">@user.Role</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success fs-6">@user.Role</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#dataQuanlynguoidung').DataTable();
        })
    </script>
}