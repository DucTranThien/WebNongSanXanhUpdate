@model WebApp.Models.ChungNhan
<div class="container-fluid d-flex align-items-center justify-content-center" style="background-image: url('/Template/img/hero-img.jpg'); background-size: cover; height: 100vh;">
    <div class="text-center p-4" style="background-color: rgba(255, 255, 255, 0.7); border-radius: 10px;">
        <h2 style="color: #4CAF50;">Bạn có chắc muốn xoá?</h2>

        <div>
            <h4 class="mt-2" style="color: #4CAF50;">Mô tả: @Model.MoTa</h4>
            <h4 class="mt-2" style="color: #4CAF50;">Hình ảnh</h4>

            @if (Model.HinhAnhChungNhan is not null)
            {
                <img src="@Model.HinhAnhChungNhan" alt="Product Image" class="img-thumbnail mt-2" style="max-width: 300px;" />
            }
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="IdchungNhan" />
            <button type="submit" class="btn btn-danger mr-2">Xoá</button>
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </form>
    </div>
</div>