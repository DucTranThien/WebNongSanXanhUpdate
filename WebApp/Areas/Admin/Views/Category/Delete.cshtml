@model WebApp.Models.Category

<div class="container-fluid d-flex align-items-center justify-content-center" style="background-image: url('/Template/img/hero-img.jpg'); background-size: cover; height: 100vh;">
    <div class="text-center p-4" style="background-color: rgba(255, 255, 255, 0.7); border-radius: 10px; width: 100%; max-width: 400px;">
        <h2 style="color: #4caf50; margin-bottom: 20px;">Bạn có chắc muốn xoá?</h2>

        <div>
            <h4 class="mt-2" style="color: #4caf50;">Tên loại sản phẩm: @Model.NameCategory</h4>
        </div>

        <form asp-action="Delete" method="post" class="mt-2">
            <input type="hidden" asp-for="Idcategory" />
            <div class="row justify-content-center">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-danger btn-block">Xoá loại sản phẩm</button>
                </div>
                <div class="col-sm-6">
                    <a asp-action="Index" class="btn btn-success btn-block">Trở về</a>
                </div>
            </div>
        </form>
    </div>
</div>