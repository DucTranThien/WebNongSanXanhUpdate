@model WebApp.Models.Category
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="container-fluid d-flex align-items-center justify-content-center" style="background-image: url('/Template/img/hero-img.jpg'); background-size: cover; height: 100vh;">
    <div class="text-center" style="background-color: rgba(255, 255, 255, 0.7); padding: 20px; border-radius: 10px;">
        <a href="javascript:history.go(-1);" class="btn btn-primary" style="position: absolute; top: 20px; left: 20px;"><i class="fas fa-arrow-left"></i> Trở lại</a>
        <h2 style="color: #4caf50; margin-bottom: 20px;">Thêm loại sản phẩm mới</h2>

        <form asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="NameCategory" style="color: #4caf50;">Tên loại sản phẩm</label>
                <input asp-for="NameCategory" class="form-control text-center" style="width: 200px; margin: 0 auto;" />
                <span asp-validation-for="NameCategory" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center align-items-center" style="margin-top: 20px;">
                <button type="submit" class="btn btn-success mr-2">Thêm loại sản phẩm</button>
                <span style="color: #4caf50;">|</span>
                <a href="javascript:history.go(-1);" class="btn btn-primary ml-2"><i class="fas fa-arrow-left"></i> Trở về</a>
            </div>
        </form>
    </div>
</div>
