@model IEnumerable<WebApp.Models.Category>
@section Styles {
    <link href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css" rel="stylesheet" />
}
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Quản lý phân loại</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Quản lý loại sản phẩm</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
                Quản lý loại sản phẩm là nơi xem xét và cập nhật loại sản phẩm đến với người dùng.
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <a asp-action="Add" class="m-1 btn btn-success">
                        <i class="fa-solid fa-circle-plus"></i> Thêm phân loại
                    </a>
                </div>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Tất cả loại sản phẩm
            </div>

            <div class="card-body">
                <table id="dataQuanlycategories" class="table table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Tên loại sản phẩm</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.NameCategory</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@category.Idcategory" class="m-1 btn btn-warning">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.Idcategory" class="m-1 btn btn-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#dataQuanlycategories').DataTable();
        })
    </script>
}