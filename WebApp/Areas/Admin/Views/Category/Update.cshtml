@model WebApp.Models.Category
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="container-fluid d-flex align-items-center justify-content-center" style="background-image: url('/Template/img/hero-img.jpg'); background-size: cover; height: 100vh;">
    <div class="text-center p-4" style="background-color: rgba(255, 255, 255, 0.7); border-radius: 10px; width: 100%; max-width: 400px;">
        <h2 style="color: #4CAF50; margin-bottom: 20px;">Chỉnh sửa loại sản phẩm</h2>

        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Idcategory" />
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <label asp-for="NameCategory" class="form-label" style="color: #4CAF50;">Chỉnh sửa loại sản phẩm</label>
                    <input asp-for="NameCategory" class="form-control" />
                    <span asp-validation-for="NameCategory" class="text-danger"></span>
                </div>
            </div> 
            <div class="form-group row justify-content-center mt-3">
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-success btn-block">Cập nhật</button>
                </div>
                <div class="col-sm-4">
                    <a asp-action="Index" class="btn btn-primary btn-block">Trở về</a>
                </div>
            </div>
        </form>
    </div>
</div>