@{
    SelectList categories = ViewBag.Categories;
    SelectList chungNhans = ViewBag.ChungNhans;
    string daiLyName = ViewBag.DaiLys;
}
@model IEnumerable<WebApp.Models.DaiLyOnline>
@section Styles {
    <link href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css" rel="stylesheet" />
}
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Phê duyệt đại lý mới</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Phê duyệt đại lý</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
                Phê duyệt đại lý mới là nơi xem xét và xác nhận quyền đăng tải sản phẩm của người dùng.
                Họ chỉ có thể đăng tải sản phẩm sau khi tài khoản có quyền đăng bán.
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Đại lý mới
            </div>

            <div class="card-body">
                <table id="dataNewDaiLy" class="table table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Tên đại lý</th>
                            <th>Ảnh đại diện</th>
                            <th>Giới thiệu</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var daily in Model)
                        {
                            <tr>
                                <td>@daily.NameDaiLy</td>
                                <td>
                                    @if (daily.AvatarDaiLy is not null)
                                    {
                                        <img src="@daily.AvatarDaiLy" alt="DaiLy Image" class="img-thumbnail mt-2" style="max-width: 100px" />
                                    }
                                </td>
                                <td>@daily.GioiThieu</td>
                                <td>
                                    <a asp-action="AcceptPermission" asp-route-id="@daily.IdDaiLy" class="btn btn-success m-1">Chấp nhận</a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#dataNewDaiLy').DataTable();
        })
    </script>
}