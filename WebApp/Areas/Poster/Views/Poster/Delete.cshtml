@model WebApp.Areas.Poster.Models.Post
@{
    ViewData["Title"] = "Xoá bài đăng";
    Layout = "~/Areas/Poster/Views/Shared/_LayoutPoster.cshtml";
}

<style>
    /* Phong cách tổng quan cho thẻ */
    .custom-card {
        width: 100%;
        max-width: 1000px;
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
        margin: 40px auto;
    }

        .custom-card .card-header {
            background-color: #007bff;
            color: #fff;
            border-radius: 12px 12px 0 0;
            padding: 15px;
        }

        .custom-card .card-body {
            padding: 25px;
        }

        .custom-card h2 {
            font-size: 1.8rem;
            font-weight: bold;
            margin: 0;
        }

        .custom-card .form-group {
            margin-bottom: 20px;
        }

        .custom-card p {
            font-size: 1rem;
            color: #333;
            margin: 0;
            padding: 5px 0;
        }

        .custom-card label {
            font-weight: 600;
            color: #555;
            display: block;
            margin-bottom: 5px;
        }

    .post-content img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        border-radius: 8px;
        padding: 10px 20px;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        border-radius: 8px;
        padding: 10px 20px;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #6c757d;
            color: white;
        }

    .text-center {
        margin-top: 20px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card custom-card">
                <div class="card-header">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="postTitle">Tiêu đề:</label>
                        <p id="postTitle">@Model.Title</p>
                    </div>
                    <div class="form-group">
                        <label for="postContent">Nội dung:</label>
                        <div id="postContent" class="post-content">@Html.Raw(Model.Content)</div>
                    </div>
                    <div class="form-group">
                        <label for="postAuthor">Tác giả:</label>
                        <p id="postAuthor">@Model.Author.UserName</p>
                    </div>
                    <div class="form-group">
                        <label for="postCreatedAt">Ngày tạo:</label>
                        <p id="postCreatedAt">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <form asp-action="Delete" method="post" class="text-center">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Xoá</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Huỷ</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var images = document.querySelectorAll('.post-content img');

        images.forEach(function (img) {
            img.onload = function () {
                if (img.naturalWidth > window.innerWidth * 0.8) {
                    img.style.maxWidth = '80%';
                    img.style.height = 'auto';
                }
            };
        });
    });
</script>
